<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirstAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/MainActivityAnimation</item>
    </style>

    <style name="SecondAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/SecondActivityAnimation</item>
    </style>

    <style name="ThreeAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ThreeActivityAnimation</item>
    </style>

    <style name="MainActivityAnimation" parent="android:Animation">
<!--        <item name="android:activityOpenEnterAnimation">@anim/first_transition_open_enter</item>-->
<!--        <item name="android:activityOpenExitAnimation">@anim/first_transition_open_exit</item>-->
        <item name="android:activityCloseEnterAnimation">@anim/first_transition_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/first_transition_close_exit</item>
    </style>

    <style name="SecondActivityAnimation" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/first_transition_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/first_transition_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/second_transition_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/second_transition_close_exit</item>
    </style>

    <style name="ThreeActivityAnimation" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/second_transition_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/second_transition_open_exit</item>
<!--        <item name="android:activityCloseEnterAnimation">@anim/first_transition_close_enter</item>-->
<!--        <item name="android:activityCloseExitAnimation">@anim/first_transition_close_exit</item>-->
    </style>
</resources>
